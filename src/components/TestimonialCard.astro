---
export interface Props {
  name: string;
  role: string;
  image: string;
  content: string;
  rating: number;
}

const { name, role, image, content, rating = 5 } = Astro.props;
---

<div class="bg-white rounded-lg shadow-md p-6 md:p-8">
  <div class="flex items-center mb-4">
    <img 
      src={image} 
      alt={name}
      class="w-14 h-14 rounded-full object-cover mr-4"
    />
    <div>
      <h4 class="font-display text-lg text-secondary">{name}</h4>
      <p class="text-gray text-sm">{role}</p>
    </div>
  </div>
  
  <div class="flex mb-4">
    {Array.from({ length: rating }).map(() => (
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary" viewBox="0 0 20 20" fill="currentColor">
        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
      </svg>
    ))}
    
    {Array.from({ length: 5 - rating }).map(() => (
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-300" viewBox="0 0 20 20" fill="currentColor">
        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
      </svg>
    ))}
  </div>
  
  <blockquote class="text-gray italic">
    "{content}"
  </blockquote>
</div>