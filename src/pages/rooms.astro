];

const standardRooms = [
  {
    name: "Standard King Room",
    description: "Budget-friendly accommodation with a king bed, offering clean, comfortable lodging without compromising on essential amenities.",
    price: "$89",
    image: "https://images.pexels.com/photos/237371/pexels-photo-237371.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2",
